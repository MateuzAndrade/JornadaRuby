<p style="color: green"><%= notice %></p>
<h1>Gerentes</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Departamento</th>
    </tr>
  </thead>
  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td scope="row"><%= manager.name %></td>
        <td scope="row"> <% if manager.department%>
            <%=manager.department.name%></td>
        <% else%>
          Nenhum Departamento Associado
        <%end%>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
<%= link_to "New manager", new_manager_path %>