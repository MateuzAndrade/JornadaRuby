<p style="color: green"><%= notice %></p>
<h1 class="text-center">Gerentes</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Nome</th>
              <th scope="col">Departamento</th>
              <th scope="col">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @managers.each do |manager| %>
              <tr>
                <td scope="row"><%= manager.name %></td>
                <td scope="row"> <% if manager.department%>
                    <%=manager.department.name%></td>
                <% else%>
                  Nenhum Departamento Associado
                <%end%>
                <td scope><%= link_to 'Editar', edit_manager_path(manager), class: 'btn btn-primary' %>
                  <%= link_to 'Excluir', manager, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %>
                </td>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row justify-content-center mt-3">
  <div class="col-md-8 text-center">
    <%= link_to "Novo Gerente", new_manager_path , class: 'btn btn-success'%>
  </div>
</div>
</div>